import java.awt.Dimension;
import java.awt.Toolkit;
import java.awt.Color;

import javax.swing.JFrame;
import javax.swing.JButton;

public class Fenster extends JFrame {

	public static void main(String[] args) {

		JFrame FR = new JFrame();
		// ist die Reihenfolge ab hier wichtig? //nein (siehe abschnitt dynamisches Fenster)
		FR.setTitle(" Noble Überschrift");
		FR.setDefaultCloseOperation(EXIT_ON_CLOSE); // Beendet das Programm beim Schließen des Fensters
		// FR.setSize(500, 500); // Größe des Fensters
		// FR.setLocation(250, 70); // gibt die Startposition des Fensters vor
		FR.setVisible(true); // sonst wird kein Fenster generiert
		// frei verstanden nach:
		// https://public.hochschule-trier.de/~rudolph/gdv/cg/node6.html
		// (nur Erste Hälfte (vor(!) Aufzählung))

		// Versuch eines dynamischen Fensters (basierend auf Bildschirmgröße)

		// int x = getScreenSize(); // <-erster Versuch
		// zweiter versuch:
		// http://stackoverflow.com/questions/3680221/how-can-i-get-the-monitor-size-in-java
		// von hier
		Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();
		int breite = (int) screenSize.getWidth(); // Variablennamen angepasst												 
		int hoehe = (int) screenSize.getHeight(); //und cast to int einfügen lassen
		// bis hier

		FR.setSize(breite / 2, hoehe / 2);// Größe des Fensters
		// (stets die hälfte des Bildschirms, Lang wie Lreit)

		FR.setLocation(breite / 4, hoehe / 4); // Position des Fensters
		// ist Stehts die Mitte des Bildschirms (beginnend von der Linken
		// unteren Kante eines 16-tel-Rechtecks des Bildschirms in der Linken
		// obersen ecke)

		FR.getContentPane().setBackground(Color.GREEN);
		// Festlegen der Hintergrundfarbe mit .setBackground()
		// das .getContentPane() wird benötigt damit java informiert ist,
		// welche der Lagen des JFrames (Glass, Content, Layered oder Root)
		// verstanden nach:
		// https://weblogs.java.net/blog/hansmuller/archive/2005/11/jframeadd_conte.html
		// weblogs.java.net/blog/kgh/archive/2005/11/my_favorite_dea.html
		// http://stackoverflow.com/questions/16744152/java-gui-about-getcontentpane-method-and-content
		// http://docs.oracle.com/javase/tutorial/uiswing/components/rootpane.html

		JButton drawButton = new JButton();
		drawButton.setLocation(50, 50);
		drawButton.setSize(10, 10);
		drawButton.setVisible(true);
		drawButton.setText("text");
		FR.getContentPane().add(drawButton);
		drawButton.setBackground(Color.RED);
		
	}

}
