public class Ablage {
	Karte head = new Karte("");//tetetetetet
	static Ablage ablage = new Ablage(); //Erzeugung des unten definierten Ablagestapels.

	//"Ablagestapel" (Stack), auf welchen die "Karten" gelegt werden:
	public Ablage() {
		head.next = null;
	}

	//Return der Kartenanzahl auf der "ablage":
	public int size() {
		Karte current = head;
		int size = 0;
		while (current.next != null) {
			current = current.next;
			size++;
		}
		return size;
	}

	//Entfernt die oberste "Karte" auf der "ablage":
	public String pop() {
		String current = head.next.element;
		head.next = head.next.next;
		return current;
	}

	//Erzeugt eine "Karte" und legt sie oben auf dÃ­e "ablage":
	public void push(String wert) {
		Karte newKarte = new Karte(wert);
		newKarte.next = head.next;
		head.next = newKarte;
	}
	
	//Legt eine bereits vorhandene "Karte" oben auf die "ablage":
	public void push(Karte wert) {
		Karte newKarte = wert;
		newKarte.next = head.next;
		head.next = newKarte;
	}

	//Return der obersten "Karte" auf der "ablage":
	public String peek() {
		String current = head.next.element;
		return current;
	}
	
	//Entfernt alle "Karten" von der "ablage":
	public void clear() {
		head.next = null;
	}

	//Ausgabe der obersten "Karte" auf der "ablage":
	public void ausgeben() {
		System.out.println(head.next.element);
		System.out.println();
	}
}
