import java.awt.Graphics;

import javax.swing.JFrame;

public class Spiel extends SpielLoop {
	public void init() {
		setSize(854, 480);
		Thread thr = new Thread(this);
		thr.start();
		offscreen = createImage(854, 480);
		gr2 = offscreen.getGraphics();

		/*
		 * Spiel spl = new Spiel();
		 * spl.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); spl.setSize(300,
		 * 300); spl.setVisible(true);
		 */
	}

	public void paint(Graphics gr) {
		gr2.clearRect(0, 0, 854, 480);
		gr2.drawOval(x, y, 20, 20);
		gr.drawImage(offscreen, 0, 0, this);

	}

	public void update(Graphics gr) {
		paint(gr);

	}

}
