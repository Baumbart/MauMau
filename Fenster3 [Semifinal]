import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.event.*;

/**
  *
  * Beschreibung
  *
  * @author 
  */

public class Fenster3 extends JFrame {
  // Anfang Attribute
  static JButton jButton2 = new JButton();
  static JButton jButton3 = new JButton();
  static JLabel jLabel1 = new JLabel();
  static JButton jButton1 = new JButton();          
  static JLabel jLabel2 = new JLabel();
  static JLabel jLabel3 = new JLabel();
  static int pressCounter;
  // Ende Attribute
  
  public Fenster3(String title) { 
    // Frame-Initialisierung
    super(title);
    setDefaultCloseOperation(WindowConstants.DISPOSE_ON_CLOSE);
    int frameWidth = 1144; 
    int frameHeight = 670;
    setSize(frameWidth, frameHeight);
    Dimension d = Toolkit.getDefaultToolkit().getScreenSize();
    int x = (d.width - getSize().width) / 2;
    int y = (d.height - getSize().height) / 2;
    setLocation(x, y);
    setResizable(false);
    Container cp = getContentPane();
    cp.setLayout(null);
    // Anfang Komponenten
    
    
    jButton2.setBounds(120, 288, 249, 129);
    jButton2.setText("Zwei Spieler");
    jButton2.setMargin(new Insets(2, 2, 2, 2));
    jButton2.addActionListener(new ActionListener() { 
      public void actionPerformed(ActionEvent evt) { 
        jButton2_ActionPerformed(evt);
      }
    });
    cp.add(jButton2);
    jButton3.setBounds(400, 288, 265, 129);
    jButton3.setText("Drei Spieler");
    jButton3.setMargin(new Insets(2, 2, 2, 2));
    jButton3.addActionListener(new ActionListener() { 
      public void actionPerformed(ActionEvent evt) { 
        jButton3_ActionPerformed(evt);
      }
    });
    cp.add(jButton3);
    jLabel1.setBounds(120, 184, 331, 49);
    jLabel1.setText("Spieleraufforderungen");
    jLabel1.setBackground(new Color(0xFFC800));
    jLabel1.setOpaque(true);
    cp.add(jLabel1);
    jButton1.setBounds(696, 288, 233, 129);
    jButton1.setText("Spieler Drei");
    jButton1.setMargin(new Insets(2, 2, 2, 2));
    jButton1.addActionListener(new ActionListener() { 
      public void actionPerformed(ActionEvent evt) { 
        jButton1_ActionPerformed(evt);
      }
    });
    cp.add(jButton1);
    jLabel2.setBounds(704, 184, 35, 49);
    jLabel2.setText("AblageAusgabe");
    jLabel2.setBackground(new Color(0xFFC800));
    jLabel2.setOpaque(true);
    cp.add(jLabel2);
    cp.setBackground(Color.WHITE);
    jLabel3.setBounds(568, 184, 139, 49);
    jLabel3.setText("Oberste Karte:");
    jLabel3.setBackground(new Color(0xFFC800));
    jLabel3.setOpaque(true);
    cp.add(jLabel3);
    // Ende Komponenten
    
    setVisible(true);
  } // end of public Fenster3
  
  // Anfang Methoden
  
  public static void main(String[] args) {
    new Fenster3("Fenster3");
    Game game = new Game();
  } // end of main
  
  public void jButton2_ActionPerformed(ActionEvent evt) {
    // TODO hier Quelltext einfügen
    if(pressCounter== 0){
      Game.input= 2;
      Game.interagiert= true;
    }
    
    if (pressCounter== 1) {
      Game.input= 1;
      Game.interagiert= true;
    } // end of if
    
  } // end of jButton2_ActionPerformed
  
  public void jButton3_ActionPerformed(ActionEvent evt) {
    // TODO hier Quelltext einfügen
    if(pressCounter== 0){
      Game.input= 3;
      Game.interagiert= true;
    }
    
    if (pressCounter== 1) {
      Game.input= 2; 
      Game.interagiert= true;     
    } // end of if
    
  } // end of jButton3_ActionPerformed
  
  public void jButton1_ActionPerformed(ActionEvent evt) {
    // TODO hier Quelltext einfügen
    if (pressCounter== 1) {  
      Game.input= 3;   
      Game.interagiert= true;
    } // end of if
  } // end of jButton1_ActionPerformed
  
  // Ende Methoden
} // end of class Fenster3
