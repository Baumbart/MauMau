public class MainTest {
	public static void main(String[] args) {
		Matchconfig.setSpielerzahl(2);
		Kartenstapel test = new Kartenstapel();

		test.austeilen();

		for (int i = 0; i < 16; i++) {
			Ablage.ablage.push(Kartenstapel.kartenstapel.pop());
		}

		Hand.hand1.legen(Hand.hand1.head.next);
		test.reuse();
		Hand.hand1.ziehen();

		System.out.print("Hand 1: ");
		Hand.hand1.ausgeben();
		System.out.print("Hand 2: ");
		Hand.hand2.ausgeben();
		System.out.println("Kartenstapel: " + Kartenstapel.kartenstapel);
		System.out.println();
		System.out.print("Ablage: ");
		Ablage.ablage.ausgeben();
		System.out.println("Handkarten Hand 1: [" + Hand.hand1.size() + "]");
		System.out.println();
		System.out.println("Handkarten Hand 2: [" + Hand.hand2.size() + "]");
	}
}

