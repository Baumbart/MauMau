      interagiert= false;       
      
      //int input = scanner.nextInt();
      
      if (input < 3) {
        if (input == 1) {
          /*
          System.out.println("-------------------------");
          System.out.println();
          System.out.print("[Aktuell]: ");
          */
          if (bube != true) {
            Ablage.ablage.ausgeben();
          } else {
            //System.out.println(bubeChar);
            //System.out.println();
            bube = false;
            bubeError = true;
          }
          //System.out.print("[Zug]: 'Ich lege eine Karte (");
          /*
          if (aktuell == 1) {
          current = Hand.hand1.head.next;
          for (int i = 0; i < handkarten; i++) {
          System.out.print(i + 1 + ": [" + current.element;
          
          + "]");
          if (i != handkarten - 1) {
          System.out.print(" / ");
          }
          current = current.next;
          }
          }
          if (aktuell == 2) {
          current = Hand.hand2.head.next;
          for (int i = 0; i < handkarten; i++) {
