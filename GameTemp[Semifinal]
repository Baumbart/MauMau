                }
              }
            }
            if (aktuell == 3) {
              current = Hand.hand3.head;
              for (int i = 0; i < input - 1; i++) { //Läuft vom "head" der Hand des aktuellen Spielers bis zur ausgewählten Karte:
                current = current.next;
              }
              
              //Prüft, ob die ausgewählte Karte überhaupt gelegt werden kann:
              if (Hand.hand3.vergleich(current) == true) {
                special(); //Prüft, ob die ausgewählte Karte einen Spezialeffekt (7/8/Bube) hat.
                Hand.hand3.legen(current); //Legt die ausgewählte Karte auf die Ablage.
              } else { //Wenn die ausgewählte Karte nicht gelegt werden kann, wird der aktuelle Zug noch einmal neu gestartet:
                if (bubeError != true) { //Prüft, ob die Variable "bubeError" auf "true" ist. 
                  //System.out.println("hier5");
                  start(); //Neustart des gesamten Zuges durch Aufrufen der Methode "start()".
                } else { //Wenn die Variable "bubeError" auf "true" ist, muss die Variable "bube" ebenfalls noch einmal auf "true" gesetzt werden, da der aktuelle Zug danach neustartet.
                  //System.out.println("hier6");
                  bube = true;
                  start(); //Neustart des gesamten Zuges durch Aufrufen der Methode "start()".
                }
              }
            }
          } else { //Wenn ein unbrauchbarer Wert eingegeben wurde, wird der Zug neu Gestartet:
            //System.out.println("marker hier");
            zug();
          }
        } else {
          ziehenAlle();
        }
      } else {
        zug();
      }
    } else {
      if (seven == true) {
        ziehenAlle();
        /*
        System.out.println();
        System.out.print("[Handkarten]: ");
        */
        spieler.ausgeben();
        seven = false;
        pruefen();
        zug();
      }
      /*
      System.out.println("[Zug]: 'Ich ziehe eine Karte' (1)");
      int input = scanner.nextInt();
      System.out.println();
      */
      input=2;
      if (input < 2) {
        ziehenAlle();
      } else {
        zug();
      }
    }
  }
  
  public void special() {
    if (current.next.element.charAt(1) == '7') {
      seven = true;
    }
    if (current.next.element.charAt(1) == '8') {
      eight = true;
    }
    if (current.next.element.charAt(1) == 'B') {
      bube = true;
    }
    if (bube == true) {
      /*System.out.println();
      System.out.print("[Bitte wählen sie ein Symbol]: ");
      System.out.print("(1: [°] / 2: [+] / 3: [#] / 4: [*])");
      System.out.println();
      */
      Fenster3.jLabel1.setText("Bitte wählen sie ein Symbol");
      
      Fenster3.jButton26.setVisible(true);
      Fenster3.jButton27.setVisible(true);
      Fenster3.jButton28.setVisible(true);
      Fenster3.jButton29.setVisible(true);          
      
      while (interagiert !=true) {
        Fenster3.jLabel1.setText("Spieler " + aktuell + ", machen Sie bitte Ihren Zug!");        
      } // end of while 
      
      interagiert= false;
      
      
      //bubenInput = scanner.nextInt();
      
      if (bubenInput < 5) {
        //System.out.println("marker3");
        
        if (bubenInput == 1) {
          bubeChar = '°';
        }
        if (bubenInput == 2) {
          bubeChar = '+';
        }
        if (bubenInput == 3) {
          bubeChar = '#';
        }
        if (bubenInput == 4) {
          bubeChar = '*';
        }
      } else {
        special();
      }
    }
  }
  
  public void win() {
    if (win == false) {
      start();
    } else {
      Fenster3.jLabel7.setVisible(true);
      if (max == 2) {
        if (Hand.hand1.size() == 0) {          
          //System.out.println("Spieler 1 hat gewonnen!");
          Fenster3.jLabel7.setText("                Spieler 1 hat gewonnen!");
          end();
        }
        if (Hand.hand2.size() == 0) {
          //System.out.println("Spieler 2 hat gewonnen!");
          Fenster3.jLabel7.setText("                Spieler 2 hat gewonnen!");
          end();
        }
      } else {
        if (Hand.hand1.size() == 0) {
          //System.out.println("Spieler 1 hat gewonnen!");
          Fenster3.jLabel7.setText("                Spieler 1 hat gewonnen!");
          end();
        }
        if (Hand.hand2.size() == 0) {
          //System.out.println("Spieler 2 hat gewonnen!");
          Fenster3.jLabel7.setText("                Spieler 2 hat gewonnen!");
          end();
        }
        if (Hand.hand3.size() == 0) {
          //System.out.println("Spieler 3 hat gewonnen!");
          Fenster3.jLabel7.setText("                Spieler 3 hat gewonnen!");
          end();
        }
      }
    }
  }
  
  public void end() {
    /*
    System.out.println();
    System.out.println("Zum Neustarten bitte '1' drücken! / Zum Beenden bitte '2' drücken!");
    */
    Fenster3.jLabel1.setText("Zum Neustarten oder Beenden bitte anwählen");
    
    Fenster3.jButton30.setVisible(true);
    Fenster3.jButton31.setVisible(true);
    
    Fenster3.jLabel2.setVisible(false);
    Fenster3.jLabel3.setVisible(false);
    Fenster3.jLabel4.setVisible(false);
    Fenster3.jLabel5.setVisible(false);
    Fenster3.jLabel6.setVisible(false);
    
    while (interagiert!=true) {
      Fenster3.jLabel1.setText("Zum Neustarten oder Beenden bitte Option anwählen");       
    } // end of while
    Game.interagiert= true;    
    
    //int input = scanner.nextInt();
    
    /*
    System.out.println("-------------------------");
    System.out.println();
    */
    
    if (input == 1) {
      Fenster3.jLabel1.setText("~NEUSTART~");
      for (int i = 0; i<=20 ; i++) {
        Fenster3.jLabel1.setText("~NEUSTART~");         
      } // end of for
      /*
      System.out.println("~NEUSTART~");
      
      System.out.println();
      System.out.println("-------------------------");
      System.out.println();
      */
      kartenstapel.mischen();
      konfiguration();
    }
    if (input == 2) {
      //System.out.println("~SPIEL BEENDET~");
      Fenster3.jLabel1.setText("~SPIEL BEENDET~");
      for (int i = 0; i<=20 ; i++) {
        Fenster3.jLabel1.setText("~SPIEL BEENDET~");         
      } // end of for
      
      
      //System.out.println();
      //System.out.println("-------------------------");
      
    }
  }
