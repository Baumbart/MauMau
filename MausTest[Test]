import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

public class MausTest extends JFrame {

	public JPanel panel;
	public JLabel label;

	public MausTest() {
		super("title");

		panel = new JPanel();
		panel.setBackground(Color.WHITE);
		add(panel, BorderLayout.CENTER);

		label = new JLabel("normal");
		add(panel, BorderLayout.SOUTH);

		HandlerClass handler = new HandlerClass();
		panel.addMouseListener(handler);
		panel.addMouseMotionListener(handler);
	}

	public class HandlerClass implements MouseListener, MouseMotionListener {

		@Override
		public void mouseDragged(MouseEvent arg0) {
			label.setText("du drückst und hälst gerade");

		}

		@Override
		public void mouseMoved(MouseEvent arg0) {
			label.setText("du bewegst gerade die Maus");

		}

		@Override
		public void mouseClicked(MouseEvent event) {
			label.setText(String.format("clicked at %d, %a", event.getX(),
					event.getY()));

		}

		@Override
		public void mouseEntered(MouseEvent event) {
			label.setText("du bist im bereich");
			label.setBackground(Color.RED);
		}

		@Override
		public void mouseExited(MouseEvent e) {
			label.setText("du bist nicht im bereich");
			label.setBackground(Color.WHITE);
		}

		@Override
		public void mousePressed(MouseEvent e) {
			label.setText("du hast gedrückt");

		}

		@Override
		public void mouseReleased(MouseEvent e) {
			label.setText("du hast losgelassen");

		}

	}

}
